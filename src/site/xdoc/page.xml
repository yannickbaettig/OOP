<?xml version="1.0" encoding="UTF-8"?>
<document xmlns="http://maven.apache.org/XDOC/2.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/XDOC/2.0 http://maven.apache.org/xsd/xdoc-2.0.xsd">

    <properties>
        <title>OOP Maven Template</title>
        <author email="roland.gisler@hslu.ch">Roland Gisler</author>
    </properties>

    <body>
        <section type="OOP Maven Template">
            <subsection type="Inhalt">
                <p>
                    <macro type="toc">
                        <param type="section" value="0" />
                        <param type="fromDepth" value="2" />
                        <param type="toDepth" value="2" />
                    </macro>
                </p>
            </subsection>

            <subsection type="Template für einfache Java-Projekte">
                <p>
                    Dieses Projekt definiert ein einfaches, leeres Java-Projekt mit einem Maven-Build.
                    Es kann für beliebige Projekte genutzt werden und dient als ein Template.
                </p>
                <p>
                    Details siehe in der Readme-Datei:
                </p>
                <p>
                    <macro type="snippet">
                        <param type="file" value="readme.md" />
                    </macro>
                </p>
            </subsection>
        </section>
    </body>
</document>